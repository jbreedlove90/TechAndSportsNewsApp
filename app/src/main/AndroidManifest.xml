<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jasminebreedlove.techandsportsnews">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/tns_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ArticleListActivity"
            android:label="@string/tech_category"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ArticleDetailActivity"
            android:label="@string/title_article_detail"
            android:parentActivityName=".ArticleListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jasminebreedlove.techandsportsnews.ArticleListActivity" />
        </activity>
        <activity android:name=".CategoryChooser" />
        <activity
            android:name=".SportsArticleListActivity"
            android:label="@string/sports_category"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SportsArticleDetailActivity"
            android:label="@string/title_sportsarticle_detail"
            android:parentActivityName=".SportsArticleListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jasminebreedlove.techandsportsnews.SportsArticleListActivity" />
        </activity>
        <activity android:name=".SplashScreenActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>